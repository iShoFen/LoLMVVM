<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:LoLApp.Converters"
             x:Class="LoLApp.UI.Views.ChampionDetailSummary"
             x:Name="View">
    
    <ContentView.Resources>
        <converters:Base64ToImageSourceConverter x:Key="Base64ToImageSourceConverter" />
    </ContentView.Resources>
    
    <VerticalStackLayout>
        <Image Source="{Binding Base64Image, Source={x:Reference View}, 
                    Converter={StaticResource Base64ToImageSourceConverter}}"
               Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Start"/>
        
        <AbsoluteLayout>
            <Label Text="{Binding Name, Source={x:Reference View}}"
                   FontSize="Title"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds="0, 0, -1, -1"/>
            
            <Label Text="{Binding Class, Source={x:Reference View}}"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds="1, 1, -1, -1"/>
        </AbsoluteLayout>
        
        <Label Text="{Binding Bio, Source={x:Reference View}}" />
    </VerticalStackLayout>
</ContentView>